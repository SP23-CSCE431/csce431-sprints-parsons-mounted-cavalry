<table class="listing" summary="Horse list" style="width: 75%; margin: 0 auto;" border = "1">
    <tr class="header">
        <th>Name</th>
        <th>Brand</th>
    </tr>

    <% @horses.each do |horse| %>
    <tr>
        <td><center><%= horse.name %></center></td>
        <td><center><%= horse.brand %></center></td>
        <td><center><%= link_to("Show", horse_path(horse), class: 'action show') %></center></td>
        <td><center><%= link_to("Update", edit_horse_path(horse), class: 'action update') %></center></td>
        <td><center><%= link_to("Delete", delete_horse_path(horse), class: 'action delete') %></center></td>
    </tr>
    <% end %>
</table>
