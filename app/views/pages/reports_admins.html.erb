<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-rwo+OHllkliUvZ6U49+v6P9Gi6UxsehSKhbCDpYfkwGttf+y/Hh1wCf7rZ1++gZ5d5pRStxRvUpo+F5YIdF1Dw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<body class="align-items-center justify-content-center">
  <%# Navbar %>
  <%= render(NavbarComponent.new())%>

  <%# Sidebar %>
  <%= render(SidebarAdminsComponent.new())%>

  <%# Content %>
  <div class="justify-content-center align-items-center mx-auto text-center" style="padding-bottom: 5%">
    <h1>Reports</h1>
    <h2>
      <%= link_to raw('<i class="fas fa-arrow-left arrow-left"></i>'), reports_admins_pages_path(day: (@start_day - 1).strftime) %>
      Month: <%= @curr_day.strftime("%B %Y") %>
      <%= link_to raw('<i class="fas fa-arrow-right arrow-right"></i>'), reports_admins_pages_path(day: (@end_day + 1).strftime) %>
    </h2>
    <%# Test: <%= @curr_day.strftime("%B") - <%= @end_day.strftime("%B") %>

    <%= render(ReportsComponent.new(@horses, @cadets, @staffs, @start_day, @end_day, @curr_day))%>

  </div>
</body>

<style>
  a:focus {
    outline: none;
  }
  .fas:hover {
    color: black;
  }
  
  .arrow-left {
    color: gray;
    float: left;
    padding-left: 30%;
  }
  
  .arrow-right {
    color: gray;
    float: right;
    padding-right: 30%;
  }
</style>
