<body class="align-items-center justify-content-center" style="overflow-x: hidden; overflow-y: hidden;">
  <%# Navbar %>
  <%= render(NavbarComponent.new())%>

  <%# Sidebar %>
  <%= render(SidebarStaffsComponent.new())%>

  <%# Content %>
  <div class="justify-content-center align-items-center mx-auto text-center">
    <h1>Reports</h1>
    <h2>
      <%= link_to raw('<i class="fas fa-arrow-left" style="color: black;"></i>'), reports_staffs_pages_path(day: (@start_day - 1).strftime) %>
      Month: <%= @curr_day.strftime("%B %Y") %>
      <%= link_to raw('<i class="fas fa-arrow-right" style="color: black;"></i>'), reports_staffs_pages_path(day: (@end_day + 1).strftime) %>
    </h2>
    <%# Test: <%= @start_day.strftime("%d") - <%= @end_day.strftime("%d") %>

    <%= render(ReportsComponent.new(@horses, @cadets, @staffs, @start_day, @end_day, @curr_day))%>

  </div>
</body>