<%= form_with(model: schedule) do |form| %>
  <% if schedule.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
        <% schedule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <br>
    <strong><%= form.label :user_id, style: "display: block" %></strong>
    <%= form.select :user_id, get_users_full_name(), {required: true, class: "form-control"} %>
  </div>

  <div>
    <br>
    <strong><%= form.label :recurrence, style: "display: block" %></strong>
    <div>
      <%= form.label :monday, class: "checkbox-inline" do %>
        <%= form.check_box :monday, {}, "M", "" %>
        Monday
      <% end %>
      <%= form.label :tuesday, class: "checkbox-inline" do %>
        <%= form.check_box :tuesday, {}, "T", "" %>
        Tuesday
      <% end %>
      <%= form.label :wednesday, class: "checkbox-inline" do %>
        <%= form.check_box :wednesday, {}, "W", "" %>
        Wednesday
      <% end %>
      <%= form.label :thursday, class: "checkbox-inline" do %>
        <%= form.check_box :thursday, {}, "R", "" %>
        Thursday
      <% end %>
      <%= form.label :friday, class: "checkbox-inline" do %>
        <%= form.check_box :friday, {}, "F", "" %>
        Friday
      <% end %>
      <br>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
