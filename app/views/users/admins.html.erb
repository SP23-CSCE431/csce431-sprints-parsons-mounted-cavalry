          <td><center><%= link_to("Update", edit_user_path(user), class: 'action update') %></center></td>
          <td><center><%= link_to("Delete", delete_user_path(user), class: 'action delete') %></center></td>
        </tr>
      <% end %>
    </table>
  </div>
</body>
