<p style="color: green"><%= notice %></p>

<%= link_to "Back to staffs", staffs_path %>

<div class="horses index">
    <h1>Horses</h1>

    <%= link_to("<button>Add New Horse</button>".html_safe, new_horse_path, class: 'action new') %>
    <br><br>
    <table class="listing" summary="Task list" style="width: 30%;" border = "1">
        <tr class="header">
            <th>Name</th>
            <th>Details</th>
        </tr>
    
    <% @horses.each do |horse| %>
    <tr>
        <td><center><%= horse.name %></center></td>
        <td class="Details">
            <center>
            <%= link_to("Show", horse_path(horse), class: 'action show') %>
            </center>
        </td>
    </tr>
    <% end %>
    </table>
</div>
