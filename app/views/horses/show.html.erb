<body class="align-items-center justify-content-center" style="overflow-x: hidden; overflow-y: hidden;">
  <%= render(NavbarComponent.new())%>

  <%# Sidebar %>
  <% user = User.where(:email => current_admin.email).first %>
  <% if user.is_admin %>
    <%= render(SidebarAdminsComponent.new())%>
  <% elsif user.is_staff %>
    <%= render(SidebarStaffsComponent.new())%>
  <% end %>
  <div class="justify-content-center align-items-center mx-auto text-center">

    <p style="color: green"><%= notice %></p>

    <div class="horses show">
    <h2>Horse Details</h2>
    
        <center>
            <table class="listing" summary="Task list" style="width: 30%;" border = "1">
                <tr>
                    <th>Name:</th>
                    <td><%= @horse.name %></td>
                </tr>
            
                <tr>
                    <th>Brand:</th>
                    <td><%= @horse.brand %></td>
                </tr>
                <tr>
                    <th>Herd:</th>
                    <td><%= @horse.herd %></td>
                </tr>
                <tr>
                    <th>Difficulty:</th>
                    <td><%= @horse.difficulty %></td>
                </tr>
                <tr>
                    <th>Condition:</th>
                    <td><%= @horse.condition %></td>
                </tr>
            </table>
        </center>
    
        <br>
        <div class="actions">
            <%= link_to("<button>Edit Horse</button>".html_safe, edit_horse_path(@horse)) %>
            <%= link_to("<button>Delete Horse</button>".html_safe, delete_horse_path(@horse)) %>
        </div>

        <br />
        <%= link_to("<button>Back to Horses</button>".html_safe, horses_get_user_path(User.where(:email => current_admin.email).first), class: 'back-link') %>
    </div>
  </div>
</body>
