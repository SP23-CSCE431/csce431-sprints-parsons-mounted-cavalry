    <%= form.label :horse_id, style: "display: block" %>
    <%= form.select :horse_id, get_horses_info(), {required: true, class: "form-control"} %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :purpose, style: "display: block" %>
    <%= form.text_field :purpose %>
  </div>

  <div>
    <%= form.submit %>
  </div>
