<body class="align-items-center justify-content-center" style="overflow-x: hidden; overflow-y: hidden;">
  <%= render(NavbarComponent.new())%>

  <%# Sidebar %>
  <% user = User.where(:email => current_admin.email).first %>
  <% if user.is_admin %>
    <%= render(SidebarAdminsComponent.new())%>
  <% elsif user.is_staff %>
    <%= render(SidebarStaffsComponent.new())%>
  <% end %>
  <div class="justify-content-center align-items-center mx-auto text-center">
    <div class="attendances delete">
        <br>
        <h1>Delete Attendance</h1>

        <%= form_for(@attendance, method: 'delete') do |f| %>
        <% # url: attendance_path(@attendance), method: 'delete' %>

        <p>Are you sure you want to permanently delete this attendance?</p>
            
        <%= render @attendance %>
        
        <br>    
        <div class="form-buttons">
            <%= f.submit "Delete Attendance", class: "btn btn-primary create" %>
        </div>

        <% end %>

        <br>
        <%= link_to("<button type='button' class='btn btn-secondary create'>Back to Attendance</button>".html_safe, attendance_path(@attendance), class: 'back-link') %>
    </div>
  </div>
</body>
